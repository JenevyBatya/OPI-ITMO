<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://xmlns.jcp.org/jsf/html">

<h:head>
    <link rel="stylesheet" href="css/stylesStart.css"/>
</h:head>

<h:body>
    <h:panelGroup styleClass="header" layout="block">
        <h:panelGroup layout="block" id="information">
            <h:outputText id="name" value="Грибич Елизавета Дмитриевна"  />
            <br/>
            <h:outputText id="group" value="Группа: P3224"  />
            <br/>
            <h:outputText id="var" value="Вариант: 151698" />
        </h:panelGroup>
    </h:panelGroup>
    <div class="clockbox">
        <svg id="clock" xmlns="http://www.w3.org/2000/svg" width="600" height="600" viewBox="0 0 600 600">
            <g id="face">
                <circle class="circle" cx="300" cy="300" r="253.9"/>
                <path class="hour-marks" d="M300.5 94V61M506 300.5h32M300.5 506v33M94 300.5H60M411.3 107.8l7.9-13.8M493 190.2l13-7.4M492.1 411.4l16.5 9.5M411 492.3l8.9 15.3M189 492.3l-9.2 15.9M107.7 411L93 419.5M107.5 189.3l-17.1-9.9M188.1 108.2l-9-15.6"/>
                <circle class="mid-circle" cx="300" cy="300" r="16.2"/>
            </g>
            <g id="hour">
                <path class="hour-arm" d="M300.5 298V142"/>
                <circle class="sizing-box" cx="300" cy="300" r="253.9"/>
            </g>
            <g id="minute">
                <path class="minute-arm" d="M300.5 298V67"/>
                <circle class="sizing-box" cx="300" cy="300" r="253.9"/>
            </g>
        </svg>
    </div>

    <h:form styleClass="formButton">
        <h:commandButton styleClass="button" value="Вперёд" action="toIndex" />
    </h:form>


</h:body>

<script type="text/javascript">

    const HOURHAND = document.querySelector("#hour");
    const MINUTEHAND = document.querySelector("#minute");

    function runTheClock() {
        let date = new Date();

        let hr = date.getHours();
        let min = date.getMinutes();
        console.log("Hour: " + hr + " Minute: " + min);

        let hrPosition = hr * 360 / 12 + (min * (360 / 60) / 12);
        let minPosition = min * 360 / 60 ;

        HOURHAND.style.transform = "rotate(" + hrPosition + "deg)";
        MINUTEHAND.style.transform = "rotate(" + minPosition + "deg)";
    }

    setInterval(runTheClock, 60000);
    window.onload = runTheClock;
</script>

</html>
